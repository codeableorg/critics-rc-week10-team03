<p style="color: green"><%= notice %></p>
<section class="section-game">
  <div class="show-title">
    <h1 style="margin: 1rem;padding-top: 16px;">Games</h1>
    <%=link_to "New Game", "#", class: "new-game-button"%>
  </div>
  <div id="games">
    <% @games.each do |game| %>
      <%= link_to game_path(game) do %>
        <%= render game %>   
      <% end  %>
    <% end %>
  </div>
</section>