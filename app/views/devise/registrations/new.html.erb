  <h2 class="heading--lg mb-4 flex center">Sign Up</h2>
<section class="container__sm mb-2 bg-white pd-24-16">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "flex flex-column gap-4"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input">
      <%= f.label :username, class:"content-xs overline"  %>
      <div class="input__container">
        <%= f.text_field :username, autofocus: true, autocomplete: "email", class:"input input__content" %>
      </div>
    </div>

    <div class="input">
      <%= f.label :email, class:"content-xs overline"  %>
      <div class="input__container">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input input__content" %>
      </div>
    </div>

    <div class="input">
      <%= f.label :password, class:"content-xs overline"  %>
      <div class="input__container">
        <%= f.password_field :password, autocomplete: "new-password", class:"input input__content" %>
      </div>  
    </div>

    <div class="input">
      <%= f.label :password_confirmation, class:"content-xs overline"  %>
      <div class="input__container">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input input__content" %>
      </div> 
    </div>

    <div class="flex center">
      <%= f.submit "Sign up", class: "button button--sm"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>