<h2 class="heading--lg flex center mb-4">Forgot your password?</h2>
<section class="container__sm mb-2 bg-white pd-24-16">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-column gap-2 mb-4"}, data: {turbo: "false"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="input">
      <%= f.label :email,class:"content-xs overline" %>
      <div class="input__container">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input__content" %>
      </div>
    </div>
  
    <div class="flex center">
      <%= f.submit "Send", class: "button button--sm" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</section>
