<section class="container__sm mb-2" >
  <%= form_with(model: company, class: "flex flex-column gap-4") do |form| %>
    <% if company.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

        <ul>
          <% company.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input">
      <%= form.label :name, class:"content-xs overline" %>
      <div class="input__container">
        <%= form.text_field :name, class:"input input__content" %>
      </div>
    </div>

    <div class="input">
      <%= form.label :description, class:"content-xs overline" %>
      <div class="input__container">
        <%= form.text_area :description, class:"input__content" %>
      </div>
    </div>

    <div class="input">
      <%= form.label :start_date, class:"content-xs overline" %>
      <div class="input__container">
        <%= form.date_field :start_date, class:"input__content" %>
      </div>
    </div>

    <div class="input">
      <%= form.label :country, class:"content-xs overline" %>
      <div class="input__container">
        <%= form.text_field :country, class:"input__content" %>
      </div>
    </div>

    <div class="input">
      <%= form.label :cover, class:"content-xs overline" %>
      <% if company.cover.attached? %>
        <%= image_tag company.cover, class: "preview" %>
      <% end %>
      <%= form.file_field :cover %>
    </div>

    <div class="flex center">
      <%= form.submit class: "button button--sm" %>
    </div>
  <% end %>
</section>
